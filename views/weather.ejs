            </ul>
            <form action="/" method="post" class="d-flex" role="search">
              <input id="cityInput" name="cityName" class="form-control me-2" type="text" placeholder="Enter City" aria-label="Search">
              <button id="submit" class="btn btn-outline-primary" type="submit">Search</button>
            </form>
          </div>
        </div>
    </nav>

    <!-------carousel----->
    <div class="container">
        
    </div>
    <!---weather forecast--->
    <div class="container">
        <h1 class="my-4 text-center">Current Weather of <span id="nam"><%= listTitle %></span></h1>
        <main>
            <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
              <div class="col">
                <div class="card mb-4 rounded-3 shadow-sm">
                  <div class="card-header py-3">
                    <h4 class="my-0 fw-normal">Temperature</h4>
                  </div>
                  <div class="card-body">
                    <ul class="list-unstyled mt-3 mb-4">
                      <li>Temperature is <span id="temp">{%temp%}&deg;C</span></li>
                      <li>Min Temperature is <span id="min_temp">{%min_temp%}</span></li>
                      <li>Max Temperature is <span id="max_temp">{%max_temp%}</span></li>
                    </ul>
                   
                  </div>
                </div>
              </div>
              <div class="col">
                <div class="card mb-4 rounded-3 shadow-sm">
                  <div class="card-header py-3">
                    <h4 class="my-0 fw-normal">Feels Like</h4>
                  </div>
                  <div class="card-body">
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>Feels like <span id="temp">{%feelsLike%}</span></li>
                        <li>Pressure is <span id="min_temp">{%pressure%}</span></li>
                        <li>Humidity is <span id="max_temp">{%humidity%}</span></li>
                    </ul>
                    
                  </div>
                </div>
              </div>
              <div class="col">
                <div class="card mb-4 rounded-3 shadow-sm">
                  <div class="card-header py-3 ">
                    <h4 class="my-0 fw-normal">Wind</h4>
                  </div>
                  <div class="card-body">
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>Wind Speed <span id="temp">{%windSpeed%}</span></li>
                        <li>Wind Deg <span id="min_temp">{%windDeg%}</span></li><br>
                    </ul>
                    
                  </div>
                </div>
              </div>
            </div>
        
            <h2 class="display-6 text-center mb-4">Other Cities Weather</h2>
        
            <div class="table-responsive">
              <table class="table text-center">
                <thead>
                  <tr>
                    <th style="width: 34%;"></th>
                    <th style="width: 20%;">Min_temp</th>
                    <th style="width: 20%;">Max_temp</th>
                    <th style="width: 20%;">Pressure</th>
                    <th style="width: 20%;">Humidity</th>
                    <th style="width: 20%;">Wind_speed</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <th scope="row" class="text-start">Shanghai</th>
                    <td>1</td>
                    <td>2</td>
                    <td>3</td>
                    <td>4</td>
                    <td>5</td>
                    <!-- <td><svg class="bi" width="24" height="24"><use xlink:href="#check"></use></svg></td> -->
                  </tr>
                  <tr>
                    <th scope="row" class="text-start">Boston</th>
                    <td>1</td>
                    <td>2</td>
                    <td>3</td>
                    <td>4</td>
                    <td>5</td>
                  </tr>
                </tbody>
        
                <tbody>
                  <tr>
                    <th scope="row" class="text-start">Lucknow</th>
                    <td>1</td>
                    <td>2</td>
                    <td>3</td>
                    <td>4</td>
                    <td>5</td>
                  </tr>
                  <tr>
                    <th scope="row" class="text-start">Kolkata</th>
                    <td>1</td>
                    <td>2</td>
                    <td>3</td>
                    <td>4</td>
                    <td>5</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </main>
    </div>

